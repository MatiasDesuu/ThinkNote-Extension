{
  "manifest_version": 3,
  "name": "ThinkNote Bookmarker",
  "version": "1.0",
  "description": "Save bookmarks and text selections to a WebDAV SQLite database",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/sql-wasm.js", "lib/sql-wasm.wasm"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "512": "icons/icon512.png"
    }
  },
  "icons": {
    "512": "icons/icon512.png"
  }
} 
